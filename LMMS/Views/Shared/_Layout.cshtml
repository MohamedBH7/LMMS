@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LMMS.styles.css" asp-append-version="true" />
    <!-- jQuery and DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LMMS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Dropdown Menu for Additional Pages -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Admin
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Manage">Manage Books</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="ApproveBorrowRequests">Approve Borrow Requests</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="BorrowedBooks">Borrowed Books</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="BorrowRequests">Borrow Requests</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="BorrowedBooks">Return Book</a></li>
                                @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                                {
                                    <li><a class="dropdown-item" asp-area="" asp-controller="RoleManagement" asp-action="AssignRole">Assign Role</a></li>
                                }
                            </ul>
                        </li>
                        <!-- Dropdown Menu for Additional Pages -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Student
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="MyBorrowedBooks">My Borrowed Books</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Book" asp-action="StudentBorrowRequests">Student Borrow Requests</a></li>

                            </ul>
                        </li>



                        <!-- Dropdown Menu for Additional Pages -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Instructor
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Instructor" asp-action="Index">Home</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Instructor" asp-action="BookRequests">Book Requests</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Instructor" asp-action="RequestBook">Request Book</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Instructor" asp-action="MyBorrowedBooks">My Borrowed Books</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Instructor" asp-action="StudentBorrowRequests">Student Borrow Requests</a></li>

                            </ul>
                        </li>
                    </ul>


            
              
                   





                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - LMMS - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>