@model List<BorrowedBookViewModel>

<div class="container mt-4">
    <h2 class="text-center">My Borrowed Books</h2>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Borrow Date</th>
                    <th>Return Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.BookTitle</td>
                        <td>@book.BorrowDate.ToString("yyyy-MM-dd")</td>
                        <td>@(book.ReturnDate.HasValue ? book.ReturnDate.Value.ToString("yyyy-MM-dd") : "Not Returned")</td>
                        <td>@book.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">You have not borrowed any books.</p>
    }
</div>